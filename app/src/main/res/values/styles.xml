<?xml version="1.0" encoding="utf-8"?>

<resources>

  <eat-comment/>

  <style name="RabbitmqManagement" parent="Base.Theme.AppCompat.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionBarStyle">@style/RabbitmqManagement.ActionBar</item>
  </style>

  <style name="RabbitmqManagement.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
    <item name="titleTextStyle">@style/RabbitmqManagement.ActionBar.Text.Title</item>
  </style>

  <style name="RabbitmqManagement.ActionBar.Text.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="RabbitmqManagement.Widget">
    <item name="colorAccent">@color/colorPrimary</item>
  </style>

  <style name="RabbitmqManagement.Widget.Button">
    <item name="colorButtonNormal">@color/colorPrimary</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="RabbitmqManagement.Widget.Colored">
    <item name="colorControlNormal">@color/colorPrimary</item>
    <item name="colorControlActivated">@color/colorPrimaryDark</item>
  </style>

  <style name="RabbitmqManagement.Widget.Colored.TextInputLayout">
    <item name="android:textColorHint">@color/colorPrimary</item>
    <item name="android:textColorHighlight">@color/colorPrimary</item>
    <item name="android:textColorLink">@color/colorPrimary</item>
    <item name="android:textSize">@dimen/font_size_medium_plus</item>
  </style>

  <style name="RabbitmqManagement.Widget.Colored.NumberPicker">
    <item name="android:textColorPrimary">@color/colorPrimary</item>
  </style>

  <style name="Login.Widget.CardView.Button" parent="Widget.AppCompat.Button.Borderless.Colored"/>

</resources>
