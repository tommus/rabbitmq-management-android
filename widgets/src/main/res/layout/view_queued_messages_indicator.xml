<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardElevation="@dimen/messages_indicator_elevation"
    card:cardUseCompatPadding="true"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingBottom="@dimen/messages_indicator_padding_bottom"
      android:paddingEnd="@dimen/messages_indicator_padding"
      android:paddingLeft="@dimen/messages_indicator_padding"
      android:paddingRight="@dimen/messages_indicator_padding"
      android:paddingStart="@dimen/messages_indicator_padding"
      android:paddingTop="@dimen/messages_indicator_padding"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/message_rates_indicator_default_title"
          android:textSize="@dimen/messages_indicator_title_size"
          android:textStyle="bold"
          android:layout_centerVertical="true"
          />

      <ImageButton
          android:id="@+id/range"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_date_range_black_24dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          style="@android:style/Widget.Holo.Button.Borderless"
          />

    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/messages_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/messages_indicator_chart_min_height"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/ready_button"
          android:layout_width="@dimen/none"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/queued_messages_indicator_default_ready_text"
          android:textColor="@color/queued_messages_indicator_default_ready_color"
          style="@style/RabbitmqManagement.Widget.Button.Borderless.Colored"
          />

      <Button
          android:id="@+id/unacked_button"
          android:layout_width="@dimen/none"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/queued_messages_indicator_default_unacked_text"
          android:textColor="@color/queued_messages_indicator_default_unacked_color"
          style="@style/RabbitmqManagement.Widget.Button.Borderless.Colored"
          />

      <Button
          android:id="@+id/total_button"
          android:layout_width="@dimen/none"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/queued_messages_indicator_default_total_text"
          android:textColor="@color/queued_messages_indicator_default_total_color"
          style="@style/RabbitmqManagement.Widget.Button.Borderless.Colored"
          />

    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>
