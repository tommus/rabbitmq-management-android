<?xml version="1.0" encoding="utf-8"?>

<resources>

  <eat-comment/>

  <style name="RabbitmqManagement" parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="actionBarStyle">@style/RabbitmqManagement.ActionBar</item>
  </style>

  <style name="RabbitmqManagement.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="RabbitmqManagement.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
    <item name="titleTextStyle">@style/RabbitmqManagement.ActionBar.Text.Title</item>
  </style>

  <style name="RabbitmqManagement.ActionBar.Text.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="RabbitmqManagement.Widget">
    <item name="colorAccent">@color/colorPrimary</item>
  </style>

  <style name="RabbitmqManagement.Widget.Button">
    <item name="colorButtonNormal">@color/colorPrimary</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:padding">@dimen/size_medium</item>
  </style>

  <style name="RabbitmqManagement.Widget.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textAllCaps">false</item>
  </style>

</resources>
