<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:todev="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/size_medium"
    android:paddingLeft="@dimen/size_medium"
    android:paddingRight="@dimen/size_medium"
    android:paddingTop="@dimen/size_medium"
    android:scrollbars="none"
    tools:context=".ui.overview.OverviewFragment"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <com.todev.rabbitmqmanagement.ui.overview.widget.QueuedMessagesIndicator
        android:id="@+id/queued_messages_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        todev:idle_text="@string/chart_no_data"
        todev:ready_color="@color/queuedMessagesReady"
        todev:title="@string/activity_overview_queued_messages_title"
        todev:total_color="@color/queuedMessagesTotal"
        todev:unacked_color="@color/queuedMessagesUnacked"
        todev:values_visible="false"
        todev:visible_range="one_minute"
        />


    <com.todev.rabbitmqmanagement.ui.overview.widget.MessageRatesIndicator
        android:id="@+id/message_rates_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        todev:confirm_color="@color/messagesRatesConfirmed"
        todev:deliver_color="@color/messagesRatesDelivered"
        todev:idle_text="@string/chart_no_data"
        todev:publish_color="@color/messageRatesPublished"
        todev:publish_in_color="@color/messagesRatesPublishedIn"
        todev:publish_out_color="@color/messagesRatesPublishedOut"
        todev:redelivered_color="@color/messagesRatesRedelivered"
        todev:title="@string/activity_overview_message_rates_title"
        todev:values_visible="false"
        todev:visible_range="one_minute"
        />

    <com.todev.rabbitmqmanagement.ui.overview.widget.GlobalCountsIndicator
        android:id="@+id/global_counts_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

  </LinearLayout>

</ScrollView>