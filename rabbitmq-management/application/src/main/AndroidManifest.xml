<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.windly.rabbitmqmanagement">

  <!-- region Permissions -->

  <uses-permission
      android:name="android.permission.INTERNET"/>

  <!-- endregion -->

  <!-- region Application -->

  <application
      android:name=".application.RabbitMqManagement"
      android:allowBackup="true"
      android:fullBackupContent="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/RabbitMqManagement.Theme"
      android:usesCleartextTraffic="true"
      tools:ignore="GoogleAppIndexingWarning">

    <!-- region Activities -->

    <activity
        android:name=".presentation.splash.SplashActivity"
        android:noHistory="true"
        android:screenOrientation="portrait"
        android:theme="@style/RabbitMqManagement.Theme.Fullscreen">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".presentation.configure.ConfigureActivity"
        android:screenOrientation="portrait"/>

    <!-- endregion -->

  </application>

  <!-- endregion -->

</manifest>
